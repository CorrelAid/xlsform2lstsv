#!/bin/sh

# Run quick validation before commit
echo "ğŸ” Running pre-commit validation..."

# Run ESLint on all source TypeScript files
echo "ğŸ§¹ Running ESLint..."
npx eslint src --ext .ts

if [ $? -ne 0 ]; then
  echo "âŒ ESLint found issues. Please fix them before committing."
  echo "ğŸ’¡ Tip: Run 'npm run lint:fix' to automatically fix many issues."
  exit 1
fi

# Check TypeScript compilation (quick check)
echo "ğŸ“ Checking TypeScript compilation..."
npx tsc --noEmit

if [ $? -ne 0 ]; then
  echo "âŒ TypeScript compilation failed. Commit aborted."
  exit 1
fi

# Check version consistency
echo "ğŸ”¢ Checking version consistency..."
npm run check-version

