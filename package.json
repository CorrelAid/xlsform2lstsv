{
  "name": "xlsform2lstsv",
  "version": "1.2.0",
  "description": "Convert XLSForm surveys to LimeSurvey TSV format",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "fixtures:generate": "npm run build && node dist/generateFixtures.js",
    "fixtures:clean": "rm -rf tests/integration/output/*.tsv",
    "test:integration": "cd tests/integration && uv run pytest",
    "test:integration:setup": "cd tests/integration && docker-compose up -d",
    "test:integration:teardown": "cd tests/integration && docker-compose down -v",
    "test:integration:full": "npm run fixtures:generate && npm run test:integration",
    "test:all": "npm run test && npm run test:integration",
    "version:major": "npm version major -m \"chore: bump to %s\"",
    "version:minor": "npm version minor -m \"chore: bump to %s\"",
    "version:patch": "npm version patch -m \"chore: bump to %s\"",
    "release": "standard-version",
    "check-version": "npx ts-node --project tsconfig.json scripts/check-version.ts",
    "sync-version": "npx ts-node --project tsconfig.json scripts/sync-version.ts",
    "update-version": "npx ts-node --project tsconfig.json scripts/update-version.ts",
    "test-compatibility": "npx ts-node --project tsconfig.json scripts/test-compatibility-safe.ts",
    "prepare": "husky install",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "lint:commits": "commitlint --from HEAD~1"
  },
  "keywords": [
    "xlsform",
    "limesurvey",
    "survey",
    "converter",
    "tsv"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "dependencies": {
    "js-xpath": "^0.0.4",
    "xlsx": "https://cdn.sheetjs.com/xlsx-0.20.3/xlsx-0.20.3.tgz"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@types/node": "^25.0.10",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitest/ui": "^4.0.18",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "husky": "^9.1.6",
    "standard-version": "^9.5.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "vitest": "^4.0.18"
  }
}
